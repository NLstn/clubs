# Database Configuration
# For devcontainer, use the values below (DATABASE_URL is the hostname, not a full connection string)
# Use 'db' for devcontainer (Docker service name) or 'localhost' for local PostgreSQL
DATABASE_URL=db
DATABASE_PORT=5432
DATABASE_USER=civo_dev
DATABASE_USER_PASSWORD=civo_dev_password
DATABASE_NAME=civo_dev
DATABASE_SSL_MODE=disable

FRONTEND_URL=http://localhost:5173

# Generate a strong, random secret for signing JWTs (e.g., openssl rand -base64 32)
JWT_SECRET=

AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Azure Storage Configuration for Club Logos
AZURE_STORAGE_ACCOUNT_NAME=civodevstorageaccount
AZURE_STORAGE_CONTAINER_NAME=club-assets
AZURE_STORAGE_BASE_URL=https://civodevstorageaccount.blob.core.windows.net

AZURE_ACS_ENDPOINT=
AZURE_ACS_SENDER_ADDRESS=

# Keycloak Configuration
# For devcontainer, use the values below for local Keycloak instance
KEYCLOAK_SERVER_URL=http://localhost:8081
KEYCLOAK_REALM=civo-dev
KEYCLOAK_CLIENT_ID=civo-frontend
# Optional: Backend-to-Keycloak URL for Docker Compose environments
# When set, the backend uses this URL to communicate with Keycloak (e.g., http://keycloak:8080)
# while the frontend continues to use KEYCLOAK_SERVER_URL (e.g., http://localhost:8081)
# KEYCLOAK_BACKCHANNEL_URL=http://keycloak:8080
