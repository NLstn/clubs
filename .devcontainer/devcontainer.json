{
  "name": "Civo Development Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "runServices": ["app", "db", "keycloak"],
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.25"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/nlstn/devcontainer-features/go-air:latest": {},
    "ghcr.io/nlstn/devcontainer-features/psql:latest": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go"
      }
    }
  },
  "forwardPorts": [8080, 5173, 8081],
  "portsAttributes": {
    "8080": { 
      "label": "Backend API",
      "onAutoForward": "silent" 
    },
    "5173": { 
      "label": "Frontend Dev Server",
      "onAutoForward": "silent" 
    },
    "8081": { 
      "label": "Keycloak",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "cd Backend && go mod download && cd ../Frontend && npm install",
  "remoteUser": "vscode"
}
