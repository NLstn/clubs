{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "cd Backend && air",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^building\\.\\.\\.",
                    "endsPattern": "^.*Starting server on.*"
                }
            }
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "cd Frontend && npm run dev",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "VITE.*",
                    "endsPattern": "Local:.*|ready in.*"
                }
            }
        },
        {
            "label": "Start Development Environment",
            "dependsOn": ["Start Backend", "Start Frontend"],
            "dependsOrder": "parallel",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}