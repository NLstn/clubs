{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "cd Backend && ~/go/bin/air",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "^Watching.*"
                }
            }
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "cd Frontend && npm run dev",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "^.*Local:.*"
                }
            }
        },
        {
            "label": "Start Development Environment",
            "dependsOn": ["Start Backend", "Start Frontend"],
            "dependsOrder": "parallel",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}